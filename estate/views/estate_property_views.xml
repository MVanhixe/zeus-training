<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Estate Properties">
                <field name="name"/>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <filter string="Available" name="available" domain="[('state', 'in', ['new','offer_received'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <separator />
                    <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'"
                                            decoration-success="state=='offer_received' or state=='offer_accepted'">
                <field name="state" invisible="1" />
                <field name="name"/>
                <field name="tags_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="data_availability" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_set_sold" states="new,offer_received,offer_accepted" string="Sold" type="object" />
                    <button name="action_set_cancel" states="new,offer_received,offer_accepted" string="Cancel" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <field name="active" invisible="1" />
                    <div class="Title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tags_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="state" />
                            <field name="property_type" options="{'no_create': True}"/>
                            <field name="postcode" />
                            <field name="data_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" />
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly': [('state', 'in', ['offer_accepted', 'sold', 'cancel'])]}" />
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson" />
                                <field name="buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available':True}</field>
    </record>
</odoo>